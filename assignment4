import java.util.Scanner;

public class SimpleATM {
    private static double balance = 5000.0; // initial balance

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice;
        System.out.println("Welcome to Simple ATM!");
        do {
            System.out.println("\n===== MENU =====");
            System.out.println("1. Check Balance");
            System.out.println("2. Deposit Money");
            System.out.println("3. Withdraw Money");
            System.out.println("4. Exit");
            System.out.print("Enter your choice (1-4): ");
            try {
                choice = Integer.parseInt(sc.nextLine());
                switch (choice) {
                    case 1:
                        checkBalance();
                        break;
                    case 2:
                        deposit(sc);
                        break;
                    case 3:
                        withdraw(sc);
                        break;
                    case 4:
                        System.out.println("Thank you for using Simple ATM. Goodbye!");
                        break;
                    default:
                    throw new IllegalArgumentException("Invalid menu option! Please select between 1-4.");
                }
            } catch (IllegalArgumentException e) {
                System.out.println("Error: " + e.getMessage());
                choice = 0; // to continue the loop
            } finally {
                System.out.println("Transaction finished.\n");
            }
        } while (choice != 4);
        sc.close();
    }
    public static void checkBalance() {
        System.out.println("Current Balance: ₹" + balance);
    }
    public static void deposit(Scanner sc) {
        try {
            System.out.print("Enter amount to deposit: ₹");
            double amount = Double.parseDouble(sc.nextLine());
            if (amount <= 0) {
                throw new IllegalArgumentException("Deposit amount must be greater than 0.");
            }
            balance += amount;
            System.out.println("₹" + amount + " deposited successfully.");
        } catch (NumberFormatException e) {
            System.out.println("Invalid input! Please enter numbers only.");
        } catch (IllegalArgumentException e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
    public static void withdraw(Scanner sc) {
        try {
            System.out.print("Enter amount to withdraw: ₹");
            double amount = Double.parseDouble(sc.nextLine());
            if (amount <= 0) {
                throw new IllegalArgumentException("Withdrawal amount must be greater than 0.");
            }
            if (amount > balance) {
                throw new ArithmeticException("Insufficient funds!");
            }
             balance -= amount;
            System.out.println("₹" + amount + " withdrawn successfully.");
        } catch (NumberFormatException e) {
            System.out.println("Invalid input! Please enter numbers only.");
        } catch (ArithmeticException | IllegalArgumentException e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
}
